# Broker Server Configuration
BROKER_PORT=5050
NODE_ENV=development

# GitHub OAuth Configuration
# Required for GitHub integration (Phase 9)
# Create a GitHub OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# GitHub Webhook Configuration
# Secret used to verify webhook signatures
GITHUB_WEBHOOK_SECRET=kokino-webhook-secret

# Database Configuration
# SQLite database file location
DB_PATH=./data/kokino.db

# Logging
# Options: debug, info, warn, error
LOG_LEVEL=info

# Monitoring & Alerts (Phase 6)
# Enable/disable alert notifications
MONITORING_NOTIFICATIONS=true

# Optional: Webhook URL for alert notifications
# Alerts will be POSTed as JSON to this URL
# Example: Slack webhook, Discord webhook, custom endpoint
ALERT_WEBHOOK_URL=
